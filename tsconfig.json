{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
, "components/Header.tsx", "components/Banner/Carousel.js", "components/Authentication/Signin.tsx", "components/CoinsTable.js", "pages/_app.js", "config/TrendingCoinsStatic.js"  ],
  "exclude": [
    "node_modules"
  ],
  "paths": {
    "*": ["types/*.d.ts"]
  },  
}
